<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="com.v1.foundspecs.milzam.skripsiapp.Activity.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Nama Lengkap"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/textView4" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cardView3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfileName"
                    android:text="Milzam Hibatullah"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Email"
            android:layout_below="@+id/cardView4"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="13dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfileEmail"
                    android:text="email.milzam@integra.co.id"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/cardview_dark_background"
            android:text="Nomor Ponsel"
            android:layout_below="@+id/cardView4"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            app:cardUseCompatPadding="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="13dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfilePonsel"
                    android:text="0821314151251"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cardView3"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Alamat"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/cardView4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="13dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvProfileAddress"
                    android:text="makanbarengsamapacar"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:background="@color/appColor"
            android:id="@+id/btnUbahProfile"
            android:text="Ubah Profile"
            android:textColor="@color/colorWhiteSolid"
            android:layout_height="wrap_content" />
    </LinearLayout>


    </ScrollView>

